pipeline {
    agent {
        node {
            lable 't057-runner'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from version control
                // Replace the repository URL with your own
                checkout([$class: 'GitSCM', branches: [[name: '*/develop']], userRemoteConfigs: [[url: 'https://git.cloudavise.com/visops/t057/jenkinspipeline-docker-image-to-dockerhub.git']]])
            }
        }

        stage('Build') {
            steps {
                // Add any build steps if required
                sh 'ansible-playbook -i inventory deploy-nginx.yaml'
            }
        }

        stage('Deploy Nginx') {
            steps {
                // Install Nginx
                sh 'sudo apt-get update'
                sh 'sudo apt-get install -y nginx'

                // Copy Nginx configuration files
                sh 'sudo cp nginx.conf /etc/nginx/nginx.conf'
                sh 'sudo cp default-site.conf /etc/nginx/sites-available/default'

                // Start Nginx service
                sh 'sudo service nginx start'
            }
        }
    }

    post {
        always {
            // Clean up and stop Nginx service after the pipeline finishes
            sh 'sudo service nginx stop'
        }
    }
}
