pipeline {
    agent {
        node {
            label 't057-runner'
        }
    }

    stages {
        stage('checkout') {
            steps {
                git credentialsId: 'ca-git-access', branch: 'deploy-on-container', url: 'https://git.cloudavise.com/visops/t057/task-1.git'
            }
        }
        
        stage('deploy nginx') {
            steps {
                sh 'ansible-playbook -i inventory nginx-ansible.yaml'
            }
        }
    }
}

